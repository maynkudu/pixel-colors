{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext", // Changed from Preserve for broader compatibility
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true, // Change to true
    "noEmit": false, // Change to false so tsc actually writes files

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "node_modules", "dist"],
}
